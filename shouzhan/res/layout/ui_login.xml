<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background" >

    <include layout="@layout/ui_myshareandstoretitle" />
    
    <LinearLayout
            android:id="@+id/ll_register_clickhide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linearlayout_line"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/et_login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@null"
                    android:hint="@string/l_input_phone"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ll_edit_pwd_o_clear"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_qingchu_normal"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/linearlayout_line"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <EditText
                    android:id="@+id/et_login_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:background="@null"
                    android:hint="@string/l_input_pwd"
                    android:inputType="textPassword"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ll_edit_pwd_t_clear"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/icon_qingchu_normal"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView 
                android:id="@+id/tv_forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="@string/l_forget_pwd"/>
            
            <RelativeLayout
                android:id="@+id/rl_login_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_register_circle_gray"
                android:gravity="center"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

</LinearLayout>
