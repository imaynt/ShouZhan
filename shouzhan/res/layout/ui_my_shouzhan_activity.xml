<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_shouzhan"
    android:orientation="vertical" >

    <com.zykj.shouzhan.view.MyCommonTitle
        android:id="@+id/aci_mytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/tab_my_shouzhan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_shouzhan_top"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_shouye"
            style="@style/my_radiobutton"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_chanpin"
            style="@style/my_radiobutton" />

        <RadioButton
            android:id="@+id/rb_gongsi"
            style="@style/my_radiobutton" />

        <RadioButton
            android:id="@+id/rb_lianxi"
            style="@style/my_radiobutton" />

        <RadioButton
            android:id="@+id/rb_english"
            style="@style/my_radiobutton" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/my_shouzhan_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>